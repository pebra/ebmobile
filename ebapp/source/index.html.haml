!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "telephone=no", :name => "format-detection"}/
    %meta{:content => "user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height", :name => "viewport"}/
    = stylesheet_link_tag "all"
    -#<link rel="stylesheet" type="text/css" href="css/index.css" />
    -#%link{:href => "css/normalize.css", :rel => "stylesheet"}/
    -#%link{:href => "css/style.css", :rel => "stylesheet"}/
    -#<script src="http://192.168.6.115:8080/target/target-script-min.js"></script>
    %title Empfehlungsbund-App
  %body
    %script{:type => "text/x-handlebars"}
      .page
        %header.action-bar.fixed-top
          {{#linkTo 'index' class="app-icon action"}}
          <i class="icon-fries"></i>
          {{/linkTo}}
          %h1.title 
            Empfehlungsbund
          %ul.actions.pull-right
            %li 
              {{#linkTo 'index' class="action"}}<i class="icon-settings"></i>{{/linkTo}}
        .content
          .inset
            {{outlet}}

    %script{"data-template-name" => "jobs/job", :type => "text/x-handlebars"}
      .col-lg-12
        <a {{bindAttr href="job_link"}} target="_blank">
        %h1 {{title}}
        </a>
        {{#if this.favorite}}
        <button {{action 'removeFromFavorites' model}} class="btn btn-danger btn-md"><i class="icon-close"></i> Von Merkliste entfernen</button>
        {{else}}
        <button {{action 'addToFavorites' model}} class="btn btn-primary btn-md"><i class='icon-plus'></i> Auf die Merkliste</button>
        {{/if}}
        {{{description}}}

    %script{"data-template-name" => "favorites", :type => "text/x-handlebars"}
      .col-lg-12
        %h2 Merkliste
        .list-group
          {{#each model}}
          .list-group-item
            .row
              .col-sm-4
                {{id}}
                {{log description}}
                {{#link-to 'jobs.job' id}}
                <img {{bindAttr src="mobile_logo_url" alt="firm"}} />
                {{/link-to}}
              .col-sm-8
                %h3 {{title}}
          {{else}}
          Keine EintrÃ¤ge in der Liste
          {{/each}}


    %script{"data-template-name" => "search", :type => "text/x-handlebars"}
      %form.form-flex
        %label.block-label Suchbegriff
        {{input type="text" placeholder="Suchbegriff" value=query insert-newline="search" class="input-text" name='search' placeholder="z.B. Java Developer" }}
        .form-actions
          <button {{action 'search' model}} type="button" class="btn btn-block">Suchen</button>

        %ul.list
          %li.list-divider Ergebnisse
          {{#each jobsResults}}
          %li.list-item-multi-line.selectable
            {{#link-to "jobs.job" id}}
            %h3 {{truncate title 30}}
            {{/link-to}}
            %p
              {{firm}} - {{location}}
          {{/each}}

    %script{"data-template-name" => "search/jobs", :type => "text/x-handlebars"}
      %h2 Suche
      %ul
        {{#each model}}
        %li
          {{job_id}}
          {{firm}}
        {{else}}
        Keine Ergebnisse
        {{/each}}
    %script{:src => "cordova.js", :type => "text/javascript"}

    = javascript_include_tag  "all"
    / initialize cordova app
    :javascript
      app.initialize();

